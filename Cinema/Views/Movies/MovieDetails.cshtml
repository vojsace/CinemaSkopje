@model Cinema.Models.Movie

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Movie</h4>

<div class="container" style="margin-top:30px">
    <div class="row">
        <div class="col-sm-4">
            <h3>@Html.DisplayFor(model => model.Title)</h3>
            <img src="@Html.DisplayFor(model => model.Image)" height="300" width="200" />
            <p>&nbsp;</p>
            <ul class="nav nav-pills flex-column">
                <li class="nav-item">
                    <a class="nav-link active" href="@Html.DisplayFor(model => model.Video)" target="_blank">Trailer</a>
                </li>
            </ul>
            <hr class="d-sm-none">
        </div>
        <div class="col-sm-8">
            <h5>Release date: @Html.DisplayFor(model => model.ReleaseDate)</h5>
            <h6>Genre: @Html.DisplayFor(model => model.Genre)</h6>
            <h4>Despription</h4>
            <p>@Html.DisplayFor(model => model.Description)</p>
            <br />
            <h4>Rating: @Html.DisplayFor(model => model.Rating)/10</h4>

        </div>
    </div>
</div>